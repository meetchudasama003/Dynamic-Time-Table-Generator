@{
    ViewData["Title"] = "Dynamic Time Table Generator";
    Layout = "_Layout";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Dynamic Time Table Generator</h2>

    <form asp-action="GenerateSubjectInput" method="post">
        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="NoOfWorkingDays">Number of Working Days (1-7):</label>
                    <input type="number" class="form-control" id="NoOfWorkingDays" name="NoOfWorkingDays" required min="1" max="7" />
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label for="NoOfSubjectsPerDay">Number of Subjects per Day (1-8):</label>
                    <input type="number" class="form-control" id="NoOfSubjectsPerDay" name="NoOfSubjectsPerDay" required min="1" max="8" />
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label for="TotalSubjects">Total Subjects:</label>
                    <input type="number" class="form-control" id="TotalSubjects" name="TotalSubjects" required min="1" />
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label for="TotalHours">Total Hours per Week:</label>
                    <input type="text" class="form-control" id="TotalHours" name="TotalHours" readonly />
                </div>
            </div>

        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary btn-lg">Next</button>
        </div>

    </form>
</div>
@section Scripts {
    <script src="~/js/Timetable.js" asp-append-version="true"></script>
}


